<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- App Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:src="@drawable/app_logo" />

        <!-- Month Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Select Month"
            android:textColor="#333"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background" />

        <!-- Electricity Units Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Electricity Units (kWh)"
            android:textColor="#333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextUnits"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:hint="Enter units used"
            android:inputType="numberDecimal" />

        <!-- Rebate Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Rebate Percentage"
            android:textColor="#333"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroupRebate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioRebate0"
                android:text="0%" />

            <RadioButton
                android:id="@+id/radioRebate1"
                android:text="1%" />

            <RadioButton
                android:id="@+id/radioRebate2"
                android:text="2%" />

            <RadioButton
                android:id="@+id/radioRebate3"
                android:text="3%" />

            <RadioButton
                android:id="@+id/radioRebate4"
                android:text="4%" />

            <RadioButton
                android:id="@+id/radioRebate5"
                android:text="5%" />
        </RadioGroup>

        <!-- Calculate Button -->
        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#2196F3"
            android:text="Calculate Bill"
            android:textColor="#fff" />

        <!-- Calculation Results -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#e3f2fd"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculation Results"
                android:textColor="#1976D2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Charges:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewTotalCharges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 0.00"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rebate Applied:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewRebate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0%"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Final Cost:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewFinalCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 0.00"
                    android:textColor="#388E3C"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Save Bill Buttons -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="#4CAF50"
            android:enabled="false"
            android:text="Save Bill"
            android:textColor="#fff" />

        <!-- View Saved Bills Buttons -->
        <Button
            android:id="@+id/buttonViewBills"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="#FF9800"
            android:text="View Saved Bills"
            android:textColor="#fff" />
    </LinearLayout>
    <!-- About Buttons -->
    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="â“˜"
        android:textColor="#fff"
        android:textSize="24sp"
        android:background="@drawable/about_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@null" />
</androidx.constraintlayout.widget.ConstraintLayout>